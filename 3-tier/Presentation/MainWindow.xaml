        <TextBox x:Name="txtMatric" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="581,252,0,0"/>
        <TextBox x:Name="txtStudentName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="581,278,0,0"/>
        <Label x:Name="lblMatric" Content="Matric" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="482,249,0,0" Width="99"/>
        <Label x:Name="lblName" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="482,276,0,0" Width="81"/>
        <TextBox x:Name="txtStudents" HorizontalAlignment="Left" Height="177" Margin="482,28,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="274"/>

    </Grid>
</Window>
