<Window x:Class="TimerExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Reminder" Height="193.283" Width="336.94">
    <Grid Margin="0,0,2,3">
        <Button x:Name="btnStart" Content="Set Reminder" HorizontalAlignment="Left" Margin="226,119,0,0" VerticalAlignment="Top" Width="75" Click="btnStart_Click"/>
        <Label x:Name="lblTime" Content="Time (s) to count down" HorizontalAlignment="Left" Margin="23,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Message" HorizontalAlignment="Left" Margin="23,73,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCountDown" HorizontalAlignment="Left" Height="23" Margin="181,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="23" Margin="181,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
