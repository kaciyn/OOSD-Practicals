<Window x:Class="EventHandlers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid >
        <TextBox x:Name="txtMyText" HorizontalAlignment="Left" Height="53" Margin="338,20,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="118" RenderTransformOrigin="0.5,0.5" Background="#FF308508"  MouseEnter="TextBox_MouseEnter" MouseLeave="txtMyText_MouseLeave">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.698"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="btnStopEvents" Content="Stop Events" HorizontalAlignment="Left" Margin="367,92,0,0" VerticalAlignment="Top" Width="75" Click="btnStopEvents_Click"/>
        <Button x:Name="btnStartEvents" Content="Start Events" HorizontalAlignment="Left" Margin="367,131,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Click="btnStartEvents_Click"/>
    </Grid>
</Window>
